<div class="container">
  <h5 class="text-center mt-5">New ingredient for <%= @cocktail.name %></h5>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient, collection: @ingredients, input_html: { class: 'select2' } %>
    <%= f.input :description %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
